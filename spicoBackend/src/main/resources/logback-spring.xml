<configuration>

    <!-- 콘솔 출력 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Loki 전송 (Prometheus 관련 로그 제외) -->
    <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">

        <!-- Prometheus 로그 제외 필터 -->
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator>
                <expression>
                    return message != null &amp;&amp;
                    (message.contains("/actuator/prometheus") ||
                    message.contains("prometheus_"));
                </expression>
            </evaluator>
            <OnMatch>DENY</OnMatch>
            <OnMismatch>NEUTRAL</OnMismatch>
        </filter>


        <http>
            <url>http://3.34.131.188:3100/loki/api/v1/push</url>
        </http>

        <batch>
            <interval>2s</interval>
            <maxSize>50</maxSize>
        </batch>

        <format>
            <label>
                <pattern>service=backend-api,level=%level</pattern>
            </label>
            <message>
                <pattern>t=%d{yyyy-MM-dd HH:mm:ss.SSS} l=%level c=%logger{20} t=%thread | %msg %ex</pattern>
            </message>
            <sortByTime>true</sortByTime>
        </format>
    </appender>

    <!-- 콘솔 + Loki 모두 출력 (Loki는 일부 필터됨) -->
    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="LOKI"/>
    </root>

</configuration>
